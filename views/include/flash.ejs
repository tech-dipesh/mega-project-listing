<% if(success && success.length){ %>
  <div class="alert alert-success alert-dismissible fade show col-6 offset-3 z-index-10" 
       role="alert" 
       style=" z-index: 1050;">
    <%= success %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
  <% } %>
  
  <% if(error && error.length){ %>
  <div class="alert alert-danger alert-dismissible fade show col-6 offset-3 z-index-10" 
       role="alert" 
       style=" z-index: 1050;">
    <%= error %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
  <% } %>