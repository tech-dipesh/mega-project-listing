<% layout("./layouts/boilerplate.ejs") -%> 

<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-md-6">
      <div class="d-flex mb-4">
        <button class="btn btn-primary bg-success flex-grow-1 me-2" onclick="window.location.href='/login'">Login</button>
        <button class="btn btn-primary bg flex-grow-1 " onclick="window.location.href='/signup'">SignUp</button>
      </div>

      <div class="card">
        <div class="card-body">
          <div class="text-center mb-4">
            <p class="text-muted">Sign in with:</p>
            <div class="d-flex justify-content-center gap-3 mb-3">
              <button class="btn btn-outline-primary"><i class="bi bi-facebook"></i></button>
              <button class="btn btn-outline-danger"><i class="bi bi-google"></i></button>
              <button class="btn btn-outline-info"><i class="bi bi-twitter"></i></button>
              <button class="btn btn-outline-dark"><i class="bi bi-github"></i></button>
            </div>
            <p class="text-muted">or:</p>
          </div>

          <!-- Login Form -->
          <form action="/signup" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
              <label for="username" class="form-label">Username</label>
              <input type="text" class="form-control" id="username" name="username" required>
              <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
              <label for="email" class="form-label">Email</label>
              <input type="email" class="form-control" id="email" name="email" required>
              <div class="valid-feedback">Looks good!</div>
            </div>

            <div class="mb-3">
              <label for="password" class="form-label">Password</label>
              <input type="password" class="form-control" id="password" name="password" required>
            </div>

            <div class="mb-3 d-flex justify-content-between align-items-center">
              <div class="form-check">
                <input type="checkbox" class="form-check-input" id="remember" name="remember" style="cursor: pointer;">
                <label class="form-check-label" for="remember">Remember me</label>
              </div>
              <a href="/forgot-password" class="text-primary text-decoration-none">Forgot password?</a>
            </div>

            <button class="btn btn-primary w-100">Sign Up</button>
          </form>

          <div class="text-center mt-3">
            <p class="mb-0">Already a member? <a href="/login" class="text-primary text-decoration-none">Login</a></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>